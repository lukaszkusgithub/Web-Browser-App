<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Web_browser" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_dark_night</item>
        <item name="colorPrimaryVariant">@color/primary_light_night</item>
        <item name="colorOnPrimary">@color/primary_dark_night</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primary_light</item>
        <item name="colorSecondaryVariant">@color/accent_dark_night</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/accent_dark_night</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:textColor">@color/white</item>
        <!-- Customize your theme here. -->

        <!-- Snackbar -->
        <item name="snackbarStyle">@style/MaterialSnackbarTheme</item>
        <item name="snackbarButtonStyle">@style/MaterialSnackbarTextButtonTheme</item>
        <item name="snackbarTextViewStyle">@style/MaterialSnackbarTextViewTheme</item>
    </style>

    <!--    Tabs dialog style-->
    <style name="roundCornerDialog" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="shapeAppearanceOverlay">
            @style/shape
        </item>
        <item name="materialAlertDialogTitleTextStyle">@style/TitleTextStyle.tabs</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="colorSurface">?attr/colorPrimary</item>
        <item name="buttonBarPositiveButtonStyle">@style/Alert.Button.Tabs</item>
        <item name="buttonBarNeutralButtonStyle">@style/Alert.Button.Tabs</item>
    </style>

    <style name="shape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>

    <style name="Alert.Button.Tabs" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">?attr/colorPrimary</item>
        <item name="rippleColor">@color/accent_dark_night</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:background">#00FFFFFF</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TitleTextStyle.tabs" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!--    snackabr-->
    <style name="MaterialSnackbarTheme" parent="@style/Widget.MaterialComponents.Snackbar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="cornerRadius">0dp</item>
        <item name="android:layout_margin">0dp</item>
        <item name="actionTextColorAlpha">1.0</item>
    </style>

    <style name="MaterialSnackbarTextButtonTheme" parent="@style/Widget.MaterialComponents.Button.TextButton.Snackbar">
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>

    <style name="MaterialSnackbarTextViewTheme" parent="@style/Widget.MaterialComponents.Snackbar.TextView">
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:alpha">1.0</item>
    </style>

</resources>
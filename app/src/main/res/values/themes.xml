<resources xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Web_browser" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_dark</item>
        <item name="colorPrimaryVariant">@color/primary_light</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/accent_dark</item>
        <item name="colorSecondaryVariant">@color/accent_dark_night</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@color/accent_dark_night</item>
        <!-- Customize your theme here. -->
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="roundCornerDialog" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="shapeAppearanceOverlay">
            @style/shape
        </item>
        <item name="materialAlertDialogTitleTextStyle">@style/TitleTextStyle.tabs</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="colorSurface">?attr/colorPrimary</item>
        <item name="buttonBarPositiveButtonStyle">@style/Alert.Button.Tabs</item>
        <item name="buttonBarNeutralButtonStyle">@style/Alert.Button.Tabs</item>
    </style>

    <style name="shape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>

    <style name="Alert.Button.Tabs" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">?attr/colorPrimary</item>
        <item name="rippleColor">@color/accent_dark_night</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:background">#00FFFFFF</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TitleTextStyle.tabs" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>


</resources>
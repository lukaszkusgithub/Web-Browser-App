<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ShapeAppearanceOverlayExtended" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">0dp</item>
    </style>

    <style name="moreToolsShape" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">55dp</item>
    </style>

    <style name="AlertDialogThemeRemove" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="buttonBarPositiveButtonStyle">@style/Alert.Button.Positive.Remove</item>
        <item name="buttonBarNegativeButtonStyle">@style/Alert.Button.Negative.Remove</item>
        <item name="buttonBarNeutralButtonStyle">@style/Alert.Button.Negative.Remove</item>
        <item name="materialAlertDialogTitleTextStyle">@style/TitleTextStyle</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="colorSurface">?attr/colorPrimary</item>

    </style>


    <style name="Alert.Button.Positive.Remove" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">?attr/colorPrimary</item>
        <item name="rippleColor">@color/accent_dark_night</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:background">#00FFFFFF</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <style name="Alert.Button.Negative.Remove" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">?attr/colorPrimary</item>
        <item name="rippleColor">@color/accent_dark_night</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">#00FFFFFF</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AlertDialogThemeAdd" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="buttonBarPositiveButtonStyle">@style/Alert.Button.Positive.ADD</item>
        <item name="buttonBarNegativeButtonStyle">@style/Alert.Button.Negative.ADD</item>
        <item name="buttonBarNeutralButtonStyle">@style/Alert.Button.Negative.ADD</item>
        <item name="materialAlertDialogTitleTextStyle">@style/TitleTextStyle</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="colorSurface">?attr/colorPrimary</item>
    </style>

    <style name="Alert.Button.Positive.ADD" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">?attr/colorPrimary</item>
        <item name="rippleColor">@color/accent_dark_night</item>
        <item name="android:textColor">@color/teal</item>
        <item name="android:background">#00FFFFFF</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Alert.Button.Negative.ADD" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">?attr/colorPrimary</item>
        <item name="rippleColor">@color/accent_dark_night</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">#00FFFFFF</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Alert.Button.Neutral.ADD" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">?attr/colorPrimary</item>
        <item name="rippleColor">@color/accent_dark_night</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">#00FFFFFF</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <style name="TitleTextStyle" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>


</resources>